@using DDM.Web.Areas.Portal.Models.Common.Modals
@using DDM.Web.Areas.Portal.Models.SalesOrders
@model EditProductionStatusViewModel

@await Html.PartialAsync("~/Areas/Portal/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditProductionStatus")))

<div class="modal-body">
    <div id="SalesOrderProductionStatusTab">
        <form name="ProductionStatusInformationsForm" role="form" novalidate class="form-validation">

            <input type="hidden" name="salesOrderId" value="@Model.SalesOrderId" />

            <div class="form-group col-3">
                <label for="ProductionStatusId">@L("ProductionStatus")</label>
                @Html.DropDownList("ProductionStatusId", new SelectList(Model.ProductionStatusList, "Id", "DisplayName", (Model.ProductionStatusId)), new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group col-12">
                <label for="Notes">@L("Notes")</label>

                <textarea id="Notes" name="Notes" value="@Model.Notes" class="form-control" rows="5">@Model.Notes</textarea>
            </div>
        </form>
    </div>
</div>


@await Html.PartialAsync("~/Areas/Portal/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")