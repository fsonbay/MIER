
@using DDM.Web.Areas.Portal.Models.Common.Modals
@using DDM.Web.Areas.Portal.Models.SalesInvoices
@model SalesInvoiceViewModel

@await Html.PartialAsync("~/Areas/Portal/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="SalesInvoiceInformationsTab">
        
        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Number") :</h6>
                @Model.SalesInvoice.Number
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Date") :</h6>
                @Model.SalesInvoice.Date
            </div>
            <div class="col-6 mb-3">
                <h6>@L("DueDate") :</h6>
                @Model.SalesInvoice.DueDate
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Amount") :</h6>
                @Model.SalesInvoice.Amount
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Paid") :</h6>
                @Model.SalesInvoice.Paid
            </div>
            <div class="col-6 mb-3">
                <h6>@L("Outstanding") :</h6>
                @Model.SalesInvoice.Outstanding
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("SalesOrder")) @L("Number") :</h6>
                @Model.SalesOrderNumber
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/Portal/Views/Common/Modals/_ModalFooterWithClose.cshtml")

