@using DDM.Web.Areas.Portal.Models.Layout
@using DDM.Web.Areas.Portal.Views.Shared.Components.PortalLogo
@model HeaderViewModel
@{
    Layout = null;
}

<div class="kt-header__brand kt-grid__item" id="kt_header_brand">
    <div class="kt-header__brand-logo">
        <a href="@Url.Action("Index", "Home", new {area = string.Empty})">
            @await Component.InvokeAsync(typeof(PortalLogoViewComponent))
            @await Component.InvokeAsync(typeof(PortalLogoViewComponent), new { logoClass = "kt-header__brand-logo-sticky" })
        </a>
    </div>
</div>